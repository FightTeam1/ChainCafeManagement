<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@+id/item_row_3function"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:background="#fff"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:layout_width="210dp"
        android:layout_height="210dp">
        <LinearLayout
            android:id="@+id/item_row_foryou"
            android:orientation="vertical"
            android:layout_width="210dp"
            android:layout_height="210dp">
            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/img1_foryou"
                android:id="@+id/img_foryou"
                android:layout_width="210dp"
                android:layout_height="130dp"/>
            <TextView
                android:text="Đặt hàng 5 ly, nhận ưu đãi 30k mua vé xem phim"
                android:layout_margin="10dp"
                android:accessibilityTraversalBefore="@id/img_foryou"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textSize="14sp"
                android:id="@+id/text_foryou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>