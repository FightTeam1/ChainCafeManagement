<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@+id/item_column_news"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:background="#fff"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:layout_width="380dp"
        android:layout_height="300dp">
        <LinearLayout
            android:id="@+id/item_row_foryou"
            android:orientation="vertical"
            android:layout_width="380dp"
            android:layout_height="300dp">
            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/img1_foryou"
                android:id="@+id/img_news"
                android:layout_width="380dp"
                android:layout_height="170dp"/>
            <TextView
                android:text="Bật mí 3 món quà xinh xắn tại The Coffee House đang áp dụng MUA 1 TẶNG 1 nhân dịp 20.10!"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:accessibilityTraversalBefore="@id/img_news"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textSize="14sp"
                android:id="@+id/txt_caption_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Nếu chưa biết tặng gì cho hội chị em, ghé The Coffee Houst để chộp ngay 3 món quà xinh xắn và nhận ưu đãi MUA 1 TẶNG 1 từ 15.10-20.10 nhen."
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:accessibilityTraversalBefore="@id/txt_caption_news"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textSize="14sp"
                android:id="@+id/txt_text_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>